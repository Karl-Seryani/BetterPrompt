{
  "name": "betterprompt",
  "displayName": "BetterPrompt",
  "description": "AI-powered prompt enhancement for GitHub Copilot - analyze and improve vague prompts automatically",
  "version": "1.3.0",
  "publisher": "karl-seryani",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "ai",
    "prompt",
    "copilot",
    "github-copilot",
    "prompt-engineering",
    "chat",
    "optimization",
    "assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "betterprompt.optimizePrompt",
        "title": "BetterPrompt: Optimize Current Prompt"
      },
      {
        "command": "betterprompt.showSettings",
        "title": "BetterPrompt: Open Settings"
      },
      {
        "command": "betterprompt.resetOnboarding",
        "title": "BetterPrompt: Reset Onboarding (Testing)"
      }
    ],
    "keybindings": [
      {
        "command": "betterprompt.optimizePrompt",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      }
    ],
    "chatParticipants": [
      {
        "id": "betterprompt.chat",
        "name": "betterprompt",
        "description": "Enhance your prompts with intelligent analysis before sending to AI",
        "isSticky": true,
        "commands": [
          {
            "name": "auto",
            "description": "Auto-enhance and send to language model (transparent mode)"
          },
          {
            "name": "review",
            "description": "Show enhancement before sending (teaching mode)"
          }
        ]
      }
    ],
    "configuration": {
      "title": "BetterPrompt",
      "properties": {
        "betterprompt.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable BetterPrompt prompt optimization"
        },
        "betterprompt.groqApiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API key for AI-powered prompt rewriting (get free key at console.groq.com)"
        },
        "betterprompt.userLevel": {
          "type": "string",
          "enum": [
            "auto"
          ],
          "default": "auto",
          "enumDescriptions": [
            "Intelligent auto-detection based on your prompt and context"
          ],
          "description": "Prompt enhancement mode (auto-detection recommended)"
        },
        "betterprompt.vaguenessThreshold": {
          "type": "number",
          "default": 30,
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum vagueness score (0-100) to trigger prompt rewriting"
        },
        "betterprompt.autoOptimize": {
          "type": "boolean",
          "default": false,
          "description": "Automatically optimize prompts without confirmation"
        },
        "betterprompt.preferredModel": {
          "type": "string",
          "enum": [
            "auto",
            "gpt-4",
            "claude",
            "groq"
          ],
          "default": "auto",
          "enumDescriptions": [
            "Auto-select: Prefer GPT-4 > Claude > Groq",
            "Prefer GPT-4 models (requires GitHub Copilot)",
            "Prefer Claude models (requires Claude Code extension)",
            "Always use Groq API (requires API key)"
          ],
          "description": "Preferred AI model for prompt enhancement"
        },
        "betterprompt.showDiff": {
          "type": "boolean",
          "default": true,
          "description": "Show before/after diff for optimized prompts"
        },
        "betterprompt.chatMode": {
          "type": "string",
          "enum": [
            "review",
            "auto"
          ],
          "default": "review",
          "enumDescriptions": [
            "Show enhancement before sending (teaching mode)",
            "Auto-enhance and send to language model (transparent mode)"
          ],
          "description": "Default behavior for @betterprompt chat participant"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "package": "vsce package",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "sql.js": "^1.10.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Karl-Seryani/BetterPrompt.git"
  },
  "bugs": {
    "url": "https://github.com/Karl-Seryani/BetterPrompt/issues"
  },
  "homepage": "https://github.com/Karl-Seryani/BetterPrompt#readme",
  "license": "MIT",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  }
}
