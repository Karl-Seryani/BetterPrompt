{
  "name": "promptcraft",
  "displayName": "PromptCraft",
  "description": "Craft better prompts for AI coding assistants through intelligent analysis and enhancement",
  "version": "0.1.0",
  "publisher": "promptcraft",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "ai",
    "prompt",
    "optimization",
    "claude",
    "chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptcraft.optimizePrompt",
        "title": "PromptCraft: Optimize Current Prompt"
      },
      {
        "command": "promptcraft.showSettings",
        "title": "PromptCraft: Open Settings"
      },
      {
        "command": "promptcraft.showAnalytics",
        "title": "PromptCraft: View Analytics Dashboard"
      },
      {
        "command": "promptcraft.manageTemplates",
        "title": "PromptCraft: Manage Templates"
      },
      {
        "command": "promptcraft.resetOnboarding",
        "title": "PromptCraft: Reset Onboarding (Testing)"
      }
    ],
    "chatParticipants": [
      {
        "id": "promptcraft.chat",
        "name": "promptcraft",
        "description": "Enhance your prompts with intelligent analysis before sending to AI",
        "isSticky": true,
        "commands": [
          {
            "name": "auto",
            "description": "Auto-enhance and send to language model (transparent mode)"
          },
          {
            "name": "review",
            "description": "Show enhancement before sending (teaching mode)"
          }
        ]
      }
    ],
    "configuration": {
      "title": "PromptCraft",
      "properties": {
        "promptcraft.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable PromptCraft prompt optimization"
        },
        "promptcraft.groqApiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API key for AI-powered prompt rewriting (get free key at console.groq.com)"
        },
        "promptcraft.userLevel": {
          "type": "string",
          "enum": [
            "auto",
            "beginner",
            "developer"
          ],
          "default": "auto",
          "enumDescriptions": [
            "Auto-detect from your prompt (recommended)",
            "New to coding - simplified explanations with step-by-step guidance",
            "Software developer - TDD, best practices, architecture, and production-ready patterns"
          ],
          "description": "Your experience level for prompt enhancement"
        },
        "promptcraft.vaguenessThreshold": {
          "type": "number",
          "default": 30,
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum vagueness score (0-100) to trigger prompt rewriting"
        },
        "promptcraft.autoOptimize": {
          "type": "boolean",
          "default": false,
          "description": "Automatically optimize prompts without confirmation"
        },
        "promptcraft.preferredModel": {
          "type": "string",
          "enum": [
            "auto",
            "gpt-4",
            "claude",
            "groq"
          ],
          "default": "auto",
          "enumDescriptions": [
            "Auto-select: Prefer GPT-4 > Claude > Groq",
            "Prefer GPT-4 models (requires GitHub Copilot)",
            "Prefer Claude models (requires Claude Code extension)",
            "Always use Groq API (requires API key)"
          ],
          "description": "Preferred AI model for prompt enhancement"
        },
        "promptcraft.showDiff": {
          "type": "boolean",
          "default": true,
          "description": "Show before/after diff for optimized prompts"
        },
        "promptcraft.chatMode": {
          "type": "string",
          "enum": [
            "review",
            "auto"
          ],
          "default": "review",
          "enumDescriptions": [
            "Show enhancement before sending (teaching mode)",
            "Auto-enhance and send to language model (transparent mode)"
          ],
          "description": "Default behavior for @promptcraft chat participant"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "package": "vsce package",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "sql.js": "^1.10.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/promptcraft.git"
  },
  "license": "MIT",
  "icon": "icon.png"
}
