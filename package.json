{
  "name": "betterprompt",
  "displayName": "BetterPrompt",
  "description": "Enhance your prompts for GitHub Copilot. Detects workspace context and transforms simple requests into detailed, actionable prompts.",
  "version": "1.9.0",
  "publisher": "karl-seryani",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "ai",
    "prompt",
    "copilot",
    "github-copilot",
    "prompt-engineering",
    "chat",
    "assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "betterprompt.optimizePrompt",
        "title": "BetterPrompt: Enhance Prompt"
      },
      {
        "command": "betterprompt.showSettings",
        "title": "BetterPrompt: Settings"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "betterprompt.optimizePrompt",
          "when": "true"
        },
        {
          "command": "betterprompt.showSettings",
          "when": "true"
        }
      ]
    },
    "keybindings": [
      {
        "command": "betterprompt.optimizePrompt",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      }
    ],
    "chatParticipants": [
      {
        "id": "betterprompt.chat",
        "name": "betterprompt",
        "description": "Enhance your prompts with workspace context before sending to Copilot",
        "isSticky": true,
        "commands": [
          {
            "name": "auto",
            "description": "Enhance and send directly to Copilot"
          },
          {
            "name": "review",
            "description": "Show enhanced prompt before sending"
          },
          {
            "name": "template",
            "description": "Use a prompt template"
          }
        ]
      }
    ],
    "configuration": {
      "title": "BetterPrompt",
      "properties": {
        "betterprompt.chatMode": {
          "type": "string",
          "enum": [
            "review",
            "auto"
          ],
          "default": "review",
          "enumDescriptions": [
            "Show enhanced prompt before sending",
            "Enhance and send directly to Copilot"
          ],
          "description": "Default behavior for @betterprompt"
        },
        "betterprompt.maxRequestsPerMinute": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Rate limit for enhancements per minute"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack:prod",
    "compile": "tsc -p ./ && npm run copy-assets",
    "webpack": "webpack --mode development",
    "webpack:prod": "webpack --mode production && npm run copy-assets",
    "copy-assets": "mkdir -p dist/core/prompts && cp core/prompts/*.txt dist/core/prompts/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "jest",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.22.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.3.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Karl-Seryani/BetterPrompt.git"
  },
  "license": "MIT"
}
